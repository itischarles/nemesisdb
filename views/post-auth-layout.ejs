<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nemesis DB - Intelligence Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }
        .main-content {
            min-height: 100vh;
        }
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(45deg, #dc3545, #6f42c1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        .nav-link:hover {
            background-color: rgba(220, 53, 69, 0.1);
            border-radius: 5px;
        }
        .nav-link.active {
            background-color: #dc3545;
            color: white !important;
            border-radius: 5px;
        }
        .dashboard-card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .dashboard-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }
    </style>
</head>
<body class="bg-light">

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar">
            <div class="position-sticky pt-3">
                <!-- Brand -->
                <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                    <i class="fas fa-database text-danger me-2 fs-4"></i>
                    <h4 class="mb-0 text-danger fw-bold">Nemesis DB</h4>
                </div>

                <!-- User Info -->
                <div id="user-info-section" hx-get="/user/info" hx-trigger="load" hx-swap="innerHTML">
                    <!-- Loading user info... -->
                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded">
                        <div class="user-avatar me-3">
                            <i class="fas fa-spinner fa-spin"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0">Loading...</h6>
                            <small class="text-muted">Please wait</small>
                        </div>
                    </div>
                </div>

                <!-- Navigation Menu -->
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link text-dark active"
                           hx-get="/user/profile" hx-target="#main-content" hx-swap="innerHTML">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="#" class="nav-link text-dark"
                           hx-get="/surveillance" hx-target="#main-content" hx-swap="innerHTML">
                            <i class="fas fa-eye me-2"></i>
                            Surveillance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-dark"
                           hx-get="/intelligence" hx-target="#main-content" hx-swap="innerHTML">
                            <i class="fas fa-brain me-2"></i>
                            Intelligence
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="#" class="nav-link text-dark"
                           hx-get="/reports" hx-target="#main-content" hx-swap="innerHTML">
                            <i class="fas fa-chart-line me-2"></i>
                            Reports
                        </a>
                    </li>
                </ul>

                <!-- Quick Actions -->
                <div class="mt-4 pt-3 border-top">
                    <h6 class="text-muted text-uppercase fs-6 fw-bold mb-3">Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <button class="btn btn-danger btn-sm"
                                hx-get="/enemies/new" hx-target="#main-content" hx-swap="innerHTML">
                            <i class="fas fa-plus me-1"></i>
                            Add Enemy
                        </button>

                    </div>
                </div>

                <!-- System Status -->
                <div class="mt-4 pt-3 border-top">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt text-success me-1"></i>
                        System: Operational
                    </small>
                </div>

                <!-- Logout Button -->
                <div class="mt-3">
                    <a href="/logout" class="btn btn-outline-danger btn-sm w-100">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Logout
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
            <!-- Top Navigation Bar -->
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Intelligence Dashboard</h1>

            </div>

            <!-- Alert Section for Messages -->
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Main Content Area - Where Partials Load -->
            <div id="main-content" class="pb-4" hx-get="/user/profile" hx-trigger="load" hx-swap="innerHTML">
                <!-- Loading dashboard content... -->
                <div class="text-center py-5">
                    <i class="fas fa-spinner fa-spin fa-3x text-danger mb-3"></i>
                    <p class="text-muted">Loading intelligence dashboard...</p>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Navigation active state management
    document.addEventListener('DOMContentLoaded', function() {
        const navLinks = document.querySelectorAll('.nav-link');

        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                // Remove active class from all links
                navLinks.forEach(l => l.classList.remove('active'));
                // Add active class to clicked link
                this.classList.add('active');
            });
        });
    });

    // HTMX configuration
    document.addEventListener('htmx:afterSwap', function(evt) {
        // Auto-scroll to top after content swap
        if (evt.detail.target.id === 'main-content') {
            window.scrollTo(0, 0);
        }
    });

    // Auto-dismiss alerts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
        alerts.forEach(alert => {
            setTimeout(() => {
                const closeBtn = alert.querySelector('.btn-close');
                if (closeBtn) closeBtn.click();
            }, 5000);
        });
    });
</script>

</body>
</html>