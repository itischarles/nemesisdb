<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-danger mb-4">Intelligence Contact</h1>
                <p class="lead text-muted">
                    Need to establish secure communication? Our intelligence operatives are standing by 
                    to assist with your enemy tracking operations.
                </p>
            </div>

            <div class="row">
                <!-- Contact Form -->
                <div class="col-lg-8 mb-5">
                    <div class="card border-0 shadow-lg">
                        <div class="card-header bg-dark text-white">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-satellite-dish me-2"></i>
                                Secure Communication Channel
                            </h3>
                        </div>
                        <div class="card-body p-4">
                            <form id="contactForm" class="needs-validation" novalidate>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="codename" class="form-label ">
                                            Codename / Alias
                                        </label>
                                        <input type="text" class="form-control" id="codename" 
                                               placeholder="" required>
                                        <div class="invalid-feedback">
                                            Please provide a valid codename.
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="clearance" class="form-label ">
                                            Clearance Level
                                        </label>
                                        <select class="form-select" id="clearance" required>
                                            <option value="">Select clearance level</option>
                                            <option value="alpha">Alpha - General Inquiry</option>
                                            <option value="beta">Beta - Technical Support</option>
                                            <option value="gamma">Gamma - Intelligence Briefing</option>
                                            <option value="delta">Delta - Emergency Protocol</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Please select your clearance level.
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="secure-email" class="form-label ">
                                        Secure Email Channel
                                    </label>
                                    <input type="email" class="form-control" id="secure-email" 
                                           placeholder="" required>
                                    <div class="invalid-feedback">
                                        Please provide a valid email address.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="subject" class="form-label ">
                                        Mission Subject
                                    </label>
                                    <input type="text" class="form-control" id="subject" 
                                           placeholder="" required>
                                    <div class="invalid-feedback">
                                        Please provide a subject for your message.
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="intelligence" class="form-label ">
                                        Intelligence Brief
                                    </label>
                                    <textarea class="form-control" id="intelligence" rows="6" 
                                              placeholder=""
                                              required></textarea>
                                    <div class="invalid-feedback">
                                        Please provide your intelligence brief.
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="encrypted" required>
                                        <label class="form-check-label" for="encrypted">
                                            I acknowledge this communication will be encrypted and logged for security purposes
                                        </label>
                                        <div class="invalid-feedback">
                                            You must acknowledge our security protocols.
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-danger btn-lg w-100">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Transmit Intelligence
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-lg-4">
                    <!-- Emergency Contact -->
                    <div class="card border-danger mb-4">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Emergency Protocol
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text mb-3">
                                For immediate threats or compromised operations:
                            </p>
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-phone text-danger me-3"></i>
                                <span class="">01332-111-222</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-envelope text-danger me-3"></i>
                                <span class="">borisjohnson@nemesisdb.com</span>
                            </div>
                        </div>
                    </div>


                </div>
            </div>


        </div>
    </div>
</div>

<script>
(function() {
    'use strict';
    
    const form = document.getElementById('contactForm');
    
    form.addEventListener('submit', function(event) {
        event.preventDefault();
        
        if (!form.checkValidity()) {
            form.classList.add('was-validated');
            return;
        }
        
        // Show alert that feature is not implemented
        alert('This feature has not been implemented');
        
        form.classList.add('was-validated');
    });
})();
</script>